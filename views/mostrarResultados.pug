extends ./layout.pug

block contenido
	div(class="menu")
		ul(class="nav nav-tabs justify-content-center")
			li(class="nav-item")
				a(class="nav-link" href="/consultarDocentes") Docentes
			li(class="nav-item")
				a(class="nav-link" href="/consultarEstudiantes") Estudiantes
			li(class="nav-item")
				a(class="nav-link" href="/mostrarResultados") Mostrar resultados
			li(class="nav-item")
				a(class="nav-link" href="/determinarGanadores") Ganadores
			li(class="nav-item")
				a(class="nav-link" href="/") Cerrar sesión
	div(class="container")
		div(class="col col-sm-12")
			h1 Mostrar resultados
			table(class='table table-hover table-striped table-condensed table-responsive' style='width: 100%')
				thead(class='thead-light')
					tr
						th No. Identificación
						th Nombre
						th Puntaje
						th Tiempo (HH:MM:SS)
						th Fecha
				tbody
					for resultado in resultadosEstudiantes
						tr
							td= resultado.usu_ID
							td= resultado.usu_nombre
							td= resultado.puntajeObtenido
							td= resultado.tiempo
							- var fechaPrueba = resultado.res_dia + "/" + resultado.res_mes  + "/" + resultado.res_anio
							td 
								span= fechaPrueba
