extends ./layout.pug

block contenido
	div(class="menu")
		ul(class="nav nav-tabs justify-content-center")
			li(class="nav-item")
				a(class="nav-link" href="/consultarDocentes") Docentes
			div(div class="dropdown")
				button(class="btn dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false") Estudiantes
				div(div class="dropdown-menu" aria-labelledby="dropdownMenuButton")
					a(class="dropdown-item" href="/adicionarUsuario") Adicionar
			li(class="nav-item")
				a(class="nav-link" href="/mostrarResultados") Mostrar resultados
			li(class="nav-item")
				a(class="nav-link" href="/determinarGanadores") Ganadores
			li(class="nav-item")
				a(class="nav-link" href="/") Cerrar sesión			
	div(class='container')
		div(class='col-sm-12')
			h1 Listado de Estudiantes
			table(class='table table-hover table-striped table-bordered table-condensed table-responsive' style='width: 100%')
				thead(class='thead-light')
					tr
						th No. Identificación
						th Nombre
						th Grado
						th Género
						th Edad
						th Celular
				tbody
					for estudiante in estudiantes
						tr
							td= estudiante.ID
							td= estudiante.nombre
							td= estudiante.grado
							td= estudiante.genero
							td= estudiante.edad
							td= estudiante.num_celular