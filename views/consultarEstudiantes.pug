extends ./layout.pug

block contenido
	div(class="menu")
		ul(class="nav nav-tabs justify-content-center")
			li(class="nav-item")
				a(class="nav-link" href="/administrador") Administrador
			li(class="nav-item")
				a(class="nav-link" href="/") Cerrar sesión				
	h1 Listado de Estudiantes
	div(class='container')
		br
		div(class='col-sm-12')
			table(class='table table-hover table-striped table-bordered table-condensed table-responsive' style='width: 100%')
				thead(class='thead-light')
					tr
						th No. Identificación
						th Nombre
						th Grado
						th Género
						th Edad
						th Celular
				tbody
					for estudiante in estudiantes
						tr
							td= estudiante.ID
							td= estudiante.nombre
							td= estudiante.grado
							td= estudiante.genero
							td= estudiante.edad
							td= estudiante.num_celular